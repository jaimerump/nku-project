<% 
# Set up layout variables 
@body_id = "collectible"
@body_classes = "undock"
%>

<%= render 'layouts/item_modals' %>

<p>You can also <%= link_to "see all brands", brands_path %> or <%= link_to "see all users", users_path %></p>

<p>The item you want is missing? <%= link_to "Add it", new_item_path %></p>

<!--// GRID //-->
<div class="grid">
  <% if @items.size == 0 %>
    <%= render "templates/empty_grid", :message => "No collectibles have been curated yet." %>
  <% else %>
    <% @items.each do |item| %>
      <%= render "templates/item", :item => item %>
    <% end %>
  <% end %>
</div> 