<!DOCTYPE html>
<html>
<head>
  <title>Games, comics, toys - Collect them all with CompleteSet</title>
  
  <!--// CSS //-->
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= stylesheet_link_tag    "web", media: "all" %>
  <%= stylesheet_link_tag    "ss-social", media: "all" %>
  <%= stylesheet_link_tag    "ss-standard", media: "all" %>
  
  <!--// Javascript //-->
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "strings" %>
  <%= javascript_include_tag "urls" %>
  <%= javascript_include_tag "ss-standard" %>
  <%= javascript_include_tag "ss-social" %>
  
  <%= csrf_meta_tags %>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
  <meta http-equiv="cleartype" content="on" />
  <meta name="author" content="CompleteSet" />
  <meta name="copyright" content="Copyright 2014 CompleteSet, LLC. All Rights Reserved." />
  <meta name="publisher" content="CompleteSet" />
  <!--// FAVICON //-->
  <link rel="icon" href="/assets/favicon.ico">
  <link rel="apple-touch-icon" href="/assets/png/c.144x144.png" />
</head>
<% @authenticated_class = ( current_user ) ? "authenticated" : "unauthenticated" %>
<body id="<%= @body_id %>" class="<%= @body_classes %> <%= @authenticated_class %>">

  <%= render 'layouts/modals' %>
  
  <% if( flash[:error] ) %>
    <script>
      //Horribly hacky script to display growls until I figure out ajax
      showGrowl( '<%= flash[:error] %>','error');
    </script>
  <% end %>
  
  <!--// CONTAINER //-->
  <div id="container">
  
    <% if(current_user) %>
      <%= render 'layouts/dock' %>
    <% end %>
    
    <!--// MAIN //-->
    <div id="main">
      
      <% if( !@hide_header ) %>
        <%= render 'layouts/header' %>
      <% end %>
  
      <%= yield %>
     
    </div>  
  </div>
  
</body>
</html>
